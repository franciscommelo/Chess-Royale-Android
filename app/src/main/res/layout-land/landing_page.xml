<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"
    android:background="@color/dark_grey"



    android:layout_height="fill_parent">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="273dp"
            android:layout_height="216dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/chess_logo_1"
            tools:ignore="MissingConstraints"
             />

        <Button
            android:id="@+id/play_game_online"
            android:layout_width="130dp"
            android:layout_height="73dp"
            android:layout_marginStart="20dp"
            android:text="@string/play_online_btn"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/white"
            app:backgroundTint="@color/btn_color"
            app:layout_constraintStart_toEndOf="@id/play_game_offline"

            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <Button
            android:id="@+id/play_game_offline"
            android:layout_width="130dp"
            android:layout_height="73dp"
            android:layout_marginTop="0dp"
            android:text="@string/play_offline_btn"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/white"
            app:backgroundTint="@color/btn_color"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintStart_toStartOf="@id/logo"
            android:layout_marginEnd="30dp"
            />


        <Button
            android:id="@+id/play_puzzle"
            android:layout_width="130dp"
            android:layout_height="73dp"
            android:layout_marginEnd="20dp"
            android:text="@string/play_puzzle_btn"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/white"
            app:backgroundTint="@color/btn_color"

            app:layout_constraintEnd_toStartOf="@id/play_game_offline"
            app:layout_constraintHeight_percent=".5"
            app:layout_constraintTop_toBottomOf="@id/logo"

            />

        <Button
            android:id="@+id/about_us"
            android:layout_width="130dp"
            android:layout_height="73dp"
            android:layout_marginStart="20dp"
            android:text="@string/about_us_btn"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/white"

            app:backgroundTint="@color/btn_color"

            app:layout_constraintStart_toEndOf="@id/play_game_online"


            app:layout_constraintTop_toBottomOf="@+id/logo" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>